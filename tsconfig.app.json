{
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "dist",
      "target": "es2016",
      "jsx": "react",
      "jsxFactory": "MiniReact.createElement",
      "allowJs": true,
      "strict": true,
      "skipLibCheck": true,
      "moduleResolution": "Bundler",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*"]
  }
  